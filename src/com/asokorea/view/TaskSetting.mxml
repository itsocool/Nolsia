<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx" width="425" height="500"
				   cornerRadius="10" alpha=".75" borderWeight="10" borderColor="#D5E3E5"
				   borderAlpha=".7" dropShadowVisible="true" creationComplete="init(event)">
	<fx:Script>
		<![CDATA[
			import com.asokorea.model.enum.Icons;
			import com.asokorea.model.vo.TaskVo;
			import com.asokorea.presentation.MainViewPresentationModel;
			import com.asokorea.supportclass.LOG;
			
			import mx.core.UIComponent;
			import mx.events.FlexEvent;

			[Inject]
			public var model:MainViewPresentationModel;

			protected function init(event:FlexEvent):void
			{
				LOG.debug("init");
			}

			protected function listConnections_clickHandler(event:MouseEvent):void
			{
				if(event.relatedObject is UIComponent && listConnections.selectedItem is TaskVo)
				{
					var task:TaskVo = listConnections.selectedItem as TaskVo;

					switch(UIComponent(event.relatedObject).id)
					{
						case "btnOpen":
						case "btnName":
						{
							model.taskOpen(task);
							break;
						}

						case "btnEdit":
						{
							model.taskEdit(task);
							break;
						}

						case "btnDelete":
						{
							model.taskDelete(task);
							break;
						}

						default:
						{
							break;
						}
					}					
				}
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<s:ArrayCollection id="dataProvider" />
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout paddingLeft="10" paddingTop="10" paddingRight="10" paddingBottom="10"/>
	</s:layout>
	<s:HGroup width="100%">
		<mx:Button label="Add Connection" icon="{Icons.ADD}" click="model.addNewTask()"/>
		<mx:Spacer width="100%"/>
		<mx:LinkButton textAlign="right" icon="{Icons.WRENCH}" label="Settings" enabled="false"/>
		<mx:LinkButton textAlign="right" icon="{Icons.HELP}" label="Help" enabled="false"/>
	</s:HGroup>
	<s:List id="listConnections" dataProvider="{dataProvider}" labelField="description"  width="100%" height="100%"
			click="listConnections_clickHandler(event)"
			itemRenderer="com.asokorea.view.renderers.ConnectionListItemRenderer">

	</s:List>
</s:BorderContainer>
