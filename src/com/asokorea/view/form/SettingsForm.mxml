<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow title="Edit Settings" xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="org.drushpal.view.components.*"  width.normal="370" height.normal="176">
	<fx:Script>
		<![CDATA[		
			import com.asokorea.model.vo.SettingsVo;
			
			import mx.events.CloseEvent;
			public static const EVENT_SAVE_SETTINGS:String = "saveSettings";
			
			[Bindable]
			public var settings:SettingsVo;
			private function close():void{
				dispatchEvent(new CloseEvent(CloseEvent.CLOSE));		
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>
	<s:layout>
		<s:VerticalLayout paddingLeft="15" paddingRight="15" paddingTop="10" paddingBottom="10"/>
	</s:layout>
	<s:Label text="General Settings" styleName.normal="InformationLabel" fontWeight.normal="bold"/>
	<s:HGroup horizontalAlign="center" width="100%" height="28" styleName="formElement" verticalAlign="middle">
		<s:Label text="Open links in default external browser" width="100%"/>
		<s:CheckBox selected="{settings.openInExternalBrowser}" id="chkOpenInExtBrowser" click="{dispatchEvent(new Event(EVENT_SAVE_SETTINGS))}" />
		<components:QuickHelp text="By default DrushPal opens links in its built in browser, selecting this option will open links in your default browser."/>
	</s:HGroup>	
	<s:HGroup horizontalAlign="center" width="100%" height="28" styleName="formElement" verticalAlign="middle">
		<s:Label text="Notify me about updating the projects cache" width="100%"/>
		<s:CheckBox selected="{settings.updateRepoNotification}" id="chkUpdateRepoNotification" click="{dispatchEvent(new Event(EVENT_SAVE_SETTINGS))}" />
		<components:QuickHelp text="DrushPal stores a local copy of all of Drupal.org's projects to increase speed when the data is needed. If the cache is outdated, checking this will nofity the user."/>
	</s:HGroup>	
	
	<s:HGroup horizontalAlign="right" width="100%" >
		<mx:Button icon="{Icons.CANCEL}" click="close();"   label="Close"  id="btnCancel"/>
	</s:HGroup>	
	
	
</s:TitleWindow>
